<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".TrainingActivity" android:layout_width="match_parent" android:visibility="visible" android:id="@+id/rl_outer">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <app:ru.mathtasks.multiplicationtable.TaskView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/task_view">

        </app:ru.mathtasks.multiplicationtable.TaskView>

        <ru.mathtasks.multiplicationtable.FieldView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/field_view"/>
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >

            <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
            >
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1">
                </Space>
                <Button
                        android:text="1"
                        android:id="@+id/btn_1"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="2">
                </Space>
                <Button
                        android:text="2"
                        android:id="@+id/btn_2"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="2">
                </Space>
                <Button
                        android:text="3"
                        android:id="@+id/btn_3"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="2">
                </Space>
                <Button
                        android:text="4"
                        android:id="@+id/btn_4"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="2">
                </Space>
                <Button
                        android:text="5"
                        android:id="@+id/btn_5"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="2">
                </Space>
                <Button
                        android:text="\u232B"
                        android:id="@+id/btn_bs"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1">
                </Space>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1">
                </Space>
                <Button
                        android:text="6"
                        android:id="@+id/btn_6"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="2">
                </Space>
                <Button
                        android:text="7"
                        android:id="@+id/btn_7"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="2">
                </Space>
                <Button
                        android:text="8"
                        android:id="@+id/btn_8"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="2">
                </Space>
                <Button
                        android:text="9"
                        android:id="@+id/btn_9"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="2">
                </Space>
                <Button
                        android:text="0"
                        android:id="@+id/btn_0"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="2">
                </Space>
                <Button
                        android:text="OK"
                        android:id="@+id/btn_ok"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1">
                </Space>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>

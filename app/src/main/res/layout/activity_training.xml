<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_height="match_parent"
              android:background="#FFFFFF"
              tools:context=".TrainingActivity" android:layout_width="match_parent" android:visibility="visible" android:id="@+id/rl_outer" android:orientation="vertical">

    <app:ru.mathtasks.multiplicationtable.TaskView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/task_view">
    </app:ru.mathtasks.multiplicationtable.TaskView>

    <ru.mathtasks.multiplicationtable.FieldView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/field_view" android:layout_weight="1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    <android.support.constraint.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="3dp">
        <Button
                android:text="1"
                android:id="@+id/btn_1"
                style="@style/ButtonStyle" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/btn_2" app:layout_constraintHorizontal_chainStyle="spread"/>
        <Button
                android:text="2"
                android:id="@+id/btn_2"
                style="@style/ButtonStyle" app:layout_constraintStart_toEndOf="@+id/btn_1" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/btn_3"/>
        <Button
                android:text="3"
                android:id="@+id/btn_3"
                style="@style/ButtonStyle" app:layout_constraintStart_toEndOf="@+id/btn_2" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/btn_4"/>
        <Button
                android:text="4"
                android:id="@+id/btn_4"
                style="@style/ButtonStyle" app:layout_constraintStart_toEndOf="@+id/btn_3" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/btn_5"/>
        <Button
                android:text="5"
                android:id="@+id/btn_5"
                style="@style/ButtonStyle" app:layout_constraintStart_toEndOf="@+id/btn_4" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/btn_bs"/>
        <Button
                android:text="\u232B"
                android:id="@+id/btn_bs"
                style="@style/ButtonStyle" app:layout_constraintStart_toEndOf="@+id/btn_5" app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="3dp">
        <Button
                android:text="6"
                android:id="@+id/btn_6"
                style="@style/ButtonStyle" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/btn_7"/>
        <Button
                android:text="7"
                android:id="@+id/btn_7"
                style="@style/ButtonStyle" app:layout_constraintStart_toEndOf="@+id/btn_6" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/btn_8"/>
        <Button
                android:text="8"
                android:id="@+id/btn_8"
                style="@style/ButtonStyle" app:layout_constraintStart_toEndOf="@+id/btn_7" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/btn_9"/>
        <Button
                android:text="9"
                android:id="@+id/btn_9"
                style="@style/ButtonStyle" app:layout_constraintStart_toEndOf="@+id/btn_8" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/btn_0"/>
        <Button
                android:text="0"
                android:id="@+id/btn_0"
                style="@style/ButtonStyle" app:layout_constraintStart_toEndOf="@+id/btn_9" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/btn_ok"/>
        <Button
                android:text="OK"
                android:id="@+id/btn_ok"
                style="@style/ButtonStyle" app:layout_constraintStart_toEndOf="@+id/btn_0" app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>

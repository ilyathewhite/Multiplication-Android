<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".TrainingActivity" android:layout_width="match_parent" android:visibility="visible" android:id="@+id/rl_outer">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/ll_nextMultipliers">
        </LinearLayout>
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:id="@+id/cl_task">
            <TextView
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_multiplier" android:textSize="40dp"
                    android:textColor="@android:color/black"
                    android:textStyle="italic"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_multiplication"
                    app:layout_constraintRight_toLeftOf="@+id/tv_multiplication"/>
            <TextView
                    android:text="  \u00D7  "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_multiplication" android:textSize="40dp"
                    android:textColor="@android:color/black" android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="100dp"
                    android:layout_marginStart="100dp"/>
            <TextView
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_multiplicand" android:textSize="40dp"
                    android:textColor="@android:color/black" android:textStyle="italic"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_multiplication" app:layout_constraintStart_toEndOf="@+id/tv_multiplication"/>
            <TextView
                    android:text="  =  "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_equals" android:textSize="40dp"
                    android:textColor="@android:color/black" android:textStyle="italic"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_multiplicand" app:layout_constraintStart_toEndOf="@+id/tv_multiplicand"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_answer" android:textSize="40dp"
                    android:textColor="@android:color/black" android:textStyle="italic"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_equals" app:layout_constraintStart_toEndOf="@+id/tv_equals"
            />
        </android.support.constraint.ConstraintLayout>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/fl_outField"
                android:layout_margin="10dp">

            <LinearLayout
                    android:id="@+id/ll_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" android:layout_gravity="center">
            </LinearLayout>
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp" android:id="@+id/iv_mark" android:layout_gravity="center"
                    android:alpha="1"
                    android:visibility="gone"/>
        </FrameLayout>
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >

            <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
            >
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1">
                </Space>
                <Button
                        android:text="1"
                        android:id="@+id/btn_1"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="2">
                </Space>
                <Button
                        android:text="2"
                        android:id="@+id/btn_2"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="2">
                </Space>
                <Button
                        android:text="3"
                        android:id="@+id/btn_3"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="2">
                </Space>
                <Button
                        android:text="4"
                        android:id="@+id/btn_4"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="2">
                </Space>
                <Button
                        android:text="5"
                        android:id="@+id/btn_5"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="2">
                </Space>
                <Button
                        android:text="BS"
                        android:id="@+id/btn_bs"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1">
                </Space>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1">
                </Space>
                <Button
                        android:text="6"
                        android:id="@+id/btn_6"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="2">
                </Space>
                <Button
                        android:text="7"
                        android:id="@+id/btn_7"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="2">
                </Space>
                <Button
                        android:text="8"
                        android:id="@+id/btn_8"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="2">
                </Space>
                <Button
                        android:text="9"
                        android:id="@+id/btn_9"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="2">
                </Space>
                <Button
                        android:text="0"
                        android:id="@+id/btn_0"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="2">
                </Space>
                <Button
                        android:text="OK"
                        android:id="@+id/btn_ok"
                        style="@style/ButtonStyle"/>
                <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1">
                </Space>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>
